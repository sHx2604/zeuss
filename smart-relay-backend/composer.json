{
    "name": "smart-relay/backend-api",
    "description": "Smart Relay System PHP Backend API with MQTT Integration",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.8",
        "phpmailer/phpmailer": "^6.8",
        "stripe/stripe-php": "^13.0",
        "bluerhinos/phpmqtt": "^2.0",
        "ratchet/pawl": "^0.4",
        "react/socket": "^1.14",
        "workerman/workerman": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "SmartRelay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SmartRelay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "mqtt": "php src/Services/MqttService.php",
        "websocket": "php src/Services/WebSocketServer.php"
    }
}
